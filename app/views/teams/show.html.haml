%h1= @team.name

- if @team.users.any?
  %h2 Team Members
  %ul
    - @team.users.each do |user|
      %li= "#{user.name} - #{user.teams.find_by(teams_id: @team.id).role}"

%h2 Add User
= form_with(url: team_team_users_path(@team), method: :post) do |form|
  = form.collection_select(:user_id, User.all, :id, :first_name, {}, { multiple: true })
  - roles = current_user.owned_roles.pluck(:name)
  = form.select :role, options_for_select(roles), {}
  = form.submit 'Add User'
